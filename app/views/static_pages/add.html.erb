<%= render layout: 'layouts/home' do |f| %>
    <%= form_with(url: add_path, method: 'post') do |f| %>
        <div class="form-row">
            <div class="col-9">
                <%= f.text_field :name, placeholder: 'Search', class: 'form-control bg-dark search-field' %>
            </div>
            <div class="col">
                <button class='btn btn-link cancel-btn' type='button'><%= fa_icon 'times-circle' %></button>
            </div>
            <div class="col">
                <%= link_to 'Cancel', root_path, class:'btn btn-secondary' %>
            </div>
        </div>
    <% end %>
<% end %>